{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES5",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist/lib/es6",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "./test"],

  "typedocOptions": {
    "entryPoints": ["src/differentiation/index.ts", "src/integration/index.ts"],
    "entryPointStrategy": "Expand",
    "out": "docs",
    "theme": "github-wiki",
    "name": "calculus-algorithms"
  }
}
